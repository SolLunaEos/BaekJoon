#include<stdio.h>
int main()
{
	int n,k=0,i,j,sum=0;
	scanf("%d",&n);

	if(n%5==0) //5로 나누었을 때 나머지가 0인 것 
	{
		n=n/5;
		printf("%d",n);
	}
	
	else if(n%5==3) //5로 나누었을 때 나머지가 3인 것 
	{
		sum=n/5;
		k=n%5/3;
		printf("%d",sum+k);
	}
	
	else if(n%3==0 && n%5!=0) //3으로 나웠을 때만 되는 것 ex) 3,6,9,12 
	{
		printf("%d",n/3);
	}
	
	else if(n%5==2) //3으로 나누고 하나씩 줄여가면서 그 나머지가 5의 배수일 때
	{
		for(i=n/3; ; i--)
		{
			sum = n-(3*i);
			if(sum%5==0)
			{
				break;
			}
		}
		
		printf("%d",i+sum/5);
	}
	
	
	
	else if(n%5!=0 && n%5!=3 && n>=5) // 5로 나누고 하나씩 줄여가면서 그 나머지가 3의 배수일 때 ex) 11,21 
	{
		
		for(i=n/5; ; i--)
		{
			sum = n-(5*i);
			if(sum%3==0)
			{
				break;
			}
		}
		
		printf("%d",i+sum/3);
	}

	
	
	else
	{
		printf("-1");
	}
}
